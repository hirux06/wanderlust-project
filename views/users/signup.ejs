<% layout("/layouts/boilerplate") -%>

<body>
  <div class="row mt-1">
    <h1 class="col-6 offset-3">SignUp on WanderLust</h1>
    <div class="col-6 offset-3">
      <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="useranme" class="form-label">Username</label>
            <input type="text" name="username" id="useranme" class="form-control" required> 
            <div class="valid-feedback">Username looks good</div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">E-mail</label>
            <input type="email" name="email" id="email" class="form-control" required> 
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control" required> 
        </div>
        <button class="btn btn-success">SignUp</button>
      </form>
    </div>
  </div>
</body>
